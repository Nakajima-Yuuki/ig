<p id="notice"><%= notice %></p>
<div class="main-container">
<h1>投稿一覧</h1>

<table border="4"> 
  <thead>
    <tr>
      <th>タイトル</th>
      <th>本文</th>
      <th>ユーザー名</th>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.name %></td>
        <td><%= image_tag(post.image.url) if post.image && post.image.url %></td>
        <td><%= link_to '確認', post %></td>
        <% if post.user_id == current_user.id %>
        <td><%= link_to '編集', edit_post_path(post.id) %>
         <%= link_to "削除", post_path(post.id), method: :delete, data: { confirm: '本当に削除しますか?' } %>
    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_post_path %>
